<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_margin_back_transparent">

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/dialog_sweet_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cv"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintStart_toStartOf="@+id/view1" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/ripple_rect_corner_back"
            android:drawableTop="@drawable/ic_download"
            android:paddingStart="18dp"
            android:layout_marginTop="18dp"
            android:paddingTop="12dp"
            android:textColor="@color/white"
            android:paddingEnd="18dp"
            android:paddingBottom="12dp"
            android:text="@string/download"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toStartOf="@+id/tv_update"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rect_corner_back"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/update"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:drawableTop="@drawable/ic_update"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_download"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintStart_toEndOf="@+id/tv_download"
            app:layout_constraintTop_toTopOf="@+id/tv_download" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>